<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% groups.each do |group| %>
    <tr>
      <td><%= image_tag group.get_image, size: '50x50' %></td>
      <td><%= group.name %></td>
      <td><%= link_to "Show",group_path(group), class: "group_#{group.id}" %></td>
      <% if group.owner_id = current_user.id %>
        <td><%= link_to "Edit", edit_group_path(group), class: "group_#{group.id}" %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>