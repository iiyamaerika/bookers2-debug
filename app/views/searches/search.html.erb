<h2>Results index</h2>

<table class="table table-hover table-inverse">

  <% if @range == "User" %>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user_path(user) do %>
            <%= image_tag user.get_profile_image("50x50") %>
            <% end %>
            </td>
          <td><%= link_to user.name, user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>



    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>

      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user) do %>
          <%= image_tag book.user.get_profile_image("50x50") %>
          <% end %>
          </td>
          <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>